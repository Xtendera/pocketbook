// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  uuid            String         @id @default(uuid())
  title           String
  blobUrl         String?
  authorizedUsers User[]         @relation("BookAccess")
  progress        BookProgress[]
  collections     Collection[]
}

model User {
  uuid            String         @id @default(uuid())
  username        String         @unique
  passwordHash    String
  permission      Int
  accessibleBooks Book[]         @relation("BookAccess")
  bookProgress    BookProgress[]
}

model Collection {
  uuid  String @id @default(uuid())
  name  String
  books Book[]
}

model BookProgress {
  id          Int    @id @default(autoincrement())
  userId      String
  bookUuid    String
  progress    Int    @default(0)
  progressStr String @default("")

  user User @relation(fields: [userId], references: [uuid], onDelete: Cascade)
  book Book @relation(fields: [bookUuid], references: [uuid], onDelete: Cascade)

  @@unique([userId, bookUuid])
}
