{
  "name": "pocketbook",
  "private": false,
  "scripts": {
    "prepare": "husky",
    "localenv": "export $(grep -v '^#' .env.local | xargs)",
    "generate": "prisma generate",
    "prisma-studio": "prisma studio",
    "db-seed": "prisma db seed",
    "db-reset": "prisma migrate dev reset",
    "dx:next": "run-s migrate-dev db-seed && next dev",
    "dx:prisma-studio": "bun run prisma-studio",
    "dx": "run-p dx:* --print-label",
    "dev": "bun run dx:next",
    "prebuild": "run-s generate migrate",
    "build": "next build",
    "start": "bun run migrate && next start",
    "lint": "eslint --cache src",
    "lint-fix": "bun run lint --fix",
    "migrate-dev": "prisma migrate dev",
    "migrate": "prisma migrate deploy",
    "test-unit": "vitest",
    "test-e2e": "playwright test",
    "test-start": "run-s test-unit test-e2e",
    "postinstall": "bun run generate",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@lingo-reader/epub-parser": "^0.4.2",
    "@prisma/client": "^6.19.0",
    "@tanstack/react-query": "^5.90.9",
    "@trpc/client": "npm:@trpc/client",
    "@trpc/next": "npm:@trpc/next",
    "@trpc/react-query": "npm:@trpc/react-query",
    "@trpc/server": "npm:@trpc/server",
    "@types/formidable": "^3.4.6",
    "@types/jszip": "^3.4.1",
    "@vercel/blob": "^2.0.0",
    "argon2": "^0.44.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "epub-parser": "^0.2.5",
    "formidable": "^3.5.4",
    "husky": "^9.1.7",
    "jose": "^6.1.1",
    "jszip": "^3.10.1",
    "lint-staged": "^16.2.6",
    "lucide-react": "^0.553.0",
    "next": "^15.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-reader": "^2.0.15",
    "superjson": "^2.2.5",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "^15.5.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "6.0.0-rc.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "prisma": "^6.19.0",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,css,md,yml}": "prettier --write"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "version": "3.1.0"
}
